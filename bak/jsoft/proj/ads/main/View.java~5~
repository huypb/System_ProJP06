    out.print("<a href=\"#\">Thoát</a>");
    out.print("</div>");
    out.print("			");
    out.print("<div class=\"clr\"></div>");
    out.print("			");
    out.print("<div class=\"menu\">");
    out.print("<a href=\"#\"><h3>Th\u1ED1ng kê</h3></a>");
    out.print("<a href=\"#\"><h3>Qu\u1EA3n lý Ng\u01B0\u1EDDi s\u1EED d\u1EE5ng</h3></a>");
    out.print("<a href=\"#\"><h3>Qu\u1EA3n lý Chuyên m\u1EE5c</h3></a>");
    out.print("<a href=\"#\"><h3>Qu\u1EA3n lý Th\u1EC3 lo\u1EA1i</h3></a>");
    out.print("<a href=\"#\"><h3>Qu\u1EA3n lý Tin bài</h3></a>");
    out.print("<a href=\"#\"><h3>Qu\u1EA3n lý H\u1EC7 s\u1EA3n ph\u1EA9m</h3></a>");
